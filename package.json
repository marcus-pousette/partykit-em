{
  "name": "partykit-em",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "ttab -t 'client' yarn client:dev && ttab -t 'partykit' yarn partykit:dev && ttab -t 'server' yarn server:dev",
    "client:build": "vite build",
    "client:dev": "vite",
    "partykit:dev": "partykit dev --live",
    "server:dev": "tsx watch src/sync-server/server.ts",
    "server:start": "tsx src/sync-server/server.ts",
    "dev:up": "bash scripts/dev-up.sh",
    "dev:down": "bash scripts/dev-down.sh",
    "stack:up": "bash scripts/stack-up.sh",
    "stack:down": "bash scripts/stack-down.sh",
    "bench": "BENCH_ARTIFACTS=0 playwright test tests/bench --reporter=list",
    "bench:insert": "BENCH_GROUP=insert BENCH_ARTIFACTS=0 playwright test tests/bench --reporter=list",
    "bench:move": "BENCH_GROUP=move BENCH_ARTIFACTS=0 playwright test tests/bench --reporter=list",
    "bench:deep": "BENCH_GROUP=deep BENCH_ARTIFACTS=0 playwright test tests/bench --reporter=list",
    "deploy": "vite build && partykit deploy",
    "seed": "tsx scripts/seed.ts",
    "postinstall": "patch-package",
    "db:check": "pg_isready -h localhost -p ${PGPORT:-5432} -d ${PG_DB:-postgres}",
    "db:start": "pg_ctl -D \"$HOME/.local/var/postgres\" -l \"$HOME/.local/var/postgres/server.log\" start",
    "db:stop": "pg_ctl -D \"$HOME/.local/var/postgres\" stop",
    "db:psql": "psql -h localhost -d partydb",
    "db:bootstrap": "psql -h localhost -d postgres -v ON_ERROR_STOP=1 -c \"DO $$ BEGIN IF NOT EXISTS (SELECT FROM pg_roles WHERE rolname = 'party') THEN CREATE ROLE party LOGIN PASSWORD 'party' CREATEDB; END IF; END $$;\" -c \"DO $$ BEGIN IF NOT EXISTS (SELECT FROM pg_database WHERE datname = 'partydb') THEN CREATE DATABASE partydb OWNER party; END IF; END $$;\" -c \"GRANT ALL PRIVILEGES ON DATABASE partydb TO party;\""
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@libsql/client": "^0.14.0",
    "@libsql/client-wasm": "^0.14.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@uidotdev/usehooks": "^2.4.1",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "hono": "^4.7.5",
    "lucide-react": "^0.468.0",
    "miniflare": "^3.20250214.1",
    "nanoid": "^5.0.9",
    "next-themes": "^0.4.4",
    "node-fetch": "2",
    "node-readable-to-web-readable-stream": "^0.4.2",
    "partysocket": "^1.0.2",
    "pg-cloudflare": "^1.1.1",
    "postgres": "^3.4.5",
    "react": "^18.3.1",
    "react-arborist": "^3.4.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2",
    "readable-stream-node-to-web": "^1.0.1",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "ts-retry-promise": "^0.8.1",
    "use-resize-observer": "^9.1.0",
    "valtio": "^2.1.2",
    "wa-sqlite": "rhashimoto/wa-sqlite"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chialab/esbuild-plugin-meta-url": "^0.18.2",
    "@chialab/esbuild-plugin-worker": "^0.18.1",
    "@inquirer/prompts": "^7.2.0",
    "@playwright/test": "^1.56.1",
    "@types/node-fetch": "2",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "deasync-promise": "^1.0.1",
    "esbuild-plugin-inline-worker": "^0.1.1",
    "esbuild-plugin-tailwindcss": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "partykit": "^0.0.110",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "ttab": "^0.9.0",
    "typescript": "^5.5.4",
    "vite": "^6.0.3"
  },
  "resolutions": {
    "workerd": "1.20250214.0",
    "miniflare": "3.20250214.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
